{
  "expo": {
    "name": "coffychat",
    "slug": "coffychat",
    "version": "1.0.0",
    "owner": "kazumah",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "coffychat",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coffychat.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.coffychat.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-secure-store",
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow CoffyChat to access your contacts to help you plan coffee chats with friends."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
